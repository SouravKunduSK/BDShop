@using BdShop.Database;
@model Tuple<Ordered, IEnumerable<OrderDetail>>
@{
    ViewBag.Title = "Details";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<!-- catg header banner section -->
<section id="aa-catg-head-banner">
    <img src="~/Content/img/fashion/fashion-header-bg-8.jpg" alt="fashion img">
    <div class="aa-catg-head-banner-area">
        <div class="container">
            <div class="aa-catg-head-banner-content">
                <h2>My Orders</h2>
                <ol class="breadcrumb">
                    <li><a href="index.html">Orders</a></li>
                    <li class="active">Order Detail</li>
                </ol>
            </div>
        </div>
    </div>
</section>
<!-- / catg header banner section -->
<div class="container">

    <div class="col-md-12">
        <div class="cart-view-area">
            <i class="cart-view-table"></i>
            <h3 class="text-black-50"><strong>Customer Details:</strong></h3>
            @*<a href="../Product/Create" class="btn btn-info pull-right fa fa-plus">Add New</a>*@
        </div>
        @*<table>
                <tr>
                    <th colspan="-4">Order Id:</th>
                    <td>@Model.Item1.OrderID</td>
                </tr>
                <tr>
                    <th>Customer Name:</th>
                    <td>@Model.Item1.User.FirstName</td>
                </tr>
            </table>*@
        <div class="row">
            <div class="col-md-6">
                <dl class="d-lg-table-cell ">
                    <dt>
                        @Html.DisplayName("Order ID  ") : @Html.DisplayFor(model => model.Item1.OrderedID)
                    </dt>

                    <dt>
                        @Html.DisplayName("Customer Name ") : @Html.DisplayFor(model => model.Item1.ShippingDetail.FirstName) @Html.DisplayFor(model => model.Item1.ShippingDetail.LastName)
                    </dt>

                    @*<dt>
                            @Html.DisplayName("Customer Address : ")
                        </dt>
                        <dd>
                            @Html.DisplayFor(model => model.Item1.User.Address)
                        </dd>*@
                    <dt>
                        @Html.DisplayName("Contact No ") : @Html.DisplayFor(model => model.Item1.ShippingDetail.Mobile)
                    </dt>

                    <dt>
                        @Html.DisplayName("Payment Type ") : @Html.DisplayFor(model => model.Item1.Payment.PaymentType1.PaymentTypeName)
                    </dt>

                    <dt>
                        @Html.DisplayName("Address ") : @Html.DisplayFor(model => model.Item1.ShippingDetail.Address)
                    </dt>
                    <dt>
                        @Html.DisplayName("Post Code ") : @Html.DisplayFor(model => model.Item1.ShippingDetail.PostalCode)
                    </dt>

                </dl>
            </div>

        </div>
    </div>
</div>


<!-- Cart view section -->
<section id="cart-view">
    <div class="container">
        <div class="row">
            <div class="col-md-12">

                <div class="cart-view-area">
                    <h3><strong>Product Detail:</strong></h3>
                    @using (Html.BeginForm("Details", "MyOrder", FormMethod.Post))
                    {
                        <div class="cart-view-table">
                            <form action="">
                                <div class="table-responsive">
                                    <table class="table">
                                        <thead>
                                            <tr>
                                                <th>S.No</th>
                                                <th>Product Name</th>
                                                <th>Quantity</th>
                                                <th>Unit Price</th>
                                                <th>Total</th>
                                            </tr>
                                        </thead>

                                        <tbody>
                                            @{int i = 0;}
                                            @foreach (var item in Model.Item2)
                                            {
                                                i++;
                                                <tr>
                                                    <td>@i.ToString()</td>
                                                    <td>@item.Product.ProductName</td>
                                                    <td>@item.Quantity</td>
                                                    <td>@item.UnitPrice</td>
                                                    <td>@item.TotalAmount</td>
                                                </tr>
                                            }
                                        </tbody>
                                        <tfoot>
                                            <tr>
                                                    <td colspan="5"><h2></h2></td>

                                                </tr>
                                                <tr>
                                                    <th> </th>
                                                    <th> </th>

                                                    <th class="text-center">@ViewBag.TotalItems</th>
                                                    <th></th>
                                                    <th class="text-center">@ViewBag.Amount </th>
                                                </tr>
                                                <tr>
                                                    <th>Shipping Cost</th>
                                                    <th colspan="3"></th>
                                                    <th class="text-center">@ViewBag.ShippingCost</th>
                                                </tr>
                                            <tr class="bg-info">
                                                <th>Total Amount</th>
                                                <th colspan="3"></th>
                                                <th class="text-center">@ViewBag.TAmount</th>
                                            </tr>



                                        </tfoot>

                                    </table>
                                </div>
                                @*</div>
                                            </div>
                                        </div>
                                    </div>*@

                                <a onclick="window.history.back();" class="btn btn-warning">Back</a>
                            </form>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</section>
<!-- / Cart view section -->
